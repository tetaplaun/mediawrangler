{
  "name": "mediawrangler",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -k -n NEXT,ELECTRON -c magenta,cyan \"npm:dev:next\" \"npm:dev:electron\"",
    "dev:next": "next dev -p 3000",
    "dev:electron": "wait-on tcp:3000 && cross-env NODE_ENV=development electron .",
    "build": "npm run build:web && npm run build:app",
    "build:web": "next build && next export -o dist/renderer",
    "build:app": "electron-builder",
    "start": "cross-env NODE_ENV=production electron .",
    "clean": "rimraf .next dist release"
  },
  "build": {
    "appId": "com.mediawrangler.app",
    "files": [
      "electron/**",
      "dist/renderer/**",
      "package.json"
    ],
    "asar": true,
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "extraMetadata": {
      "main": "electron/main.js"
    }
  },
  "dependencies": {
    "next": "^15.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "19.1.12",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.0.9",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.38",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.10",
    "wait-on": "^7.2.0"
  }
}
