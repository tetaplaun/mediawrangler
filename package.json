{
  "name": "mediawrangler",
  "version": "0.1.0",
  "description": "A media file explorer and organizer",
  "author": "MediaWrangler Team",
  "private": true,
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "concurrently -k -n NEXT,ELECTRON -c magenta,cyan \"npm:dev:next\" \"npm:dev:electron\"",
    "dev:next": "next dev -p 3000",
    "dev:electron": "npm run build:electron && wait-on tcp:3000 && cross-env NODE_ENV=development electron .",
    "build": "npm run build:web && npm run build:electron && npm run build:prepare && npm run build:app",
    "build:web": "next build",
    "build:electron": "tsc -p electron/tsconfig.json",
    "build:prepare": "node scripts/prepare-build.js",
    "build:app": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --publish never",
    "build:win": "npm run build:web && npm run build:electron && npm run build:prepare && npm run build:win-manual",
    "build:win-only": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win --publish never",
    "build:win-manual": "node scripts/manual-build.js",
    "start": "cross-env NODE_ENV=production electron .",
    "clean": "rimraf .next dist release out",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\""
  },
  "build": {
    "appId": "com.mediawrangler.app",
    "productName": "Media Wrangler",
    "files": [
      "dist/**/*",
      "package.json",
      "!dist/electron/*.ts",
      "!dist/electron/*.map"
    ],
    "asar": true,
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "verifyUpdateCodeSignature": false,
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "build/icon.png"
    },
    "extraMetadata": {
      "main": "dist/electron/main.js"
    }
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "electron-store": "^10.1.0",
    "exifr": "^7.1.3",
    "fluent-ffmpeg": "^2.1.3",
    "image-size": "^2.0.2",
    "immer": "^10.1.3",
    "next": "^15.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/node": "^24.3.1",
    "@types/react": "19.1.12",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.0.9",
    "electron-builder": "^26.0.12",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "postcss": "^8.4.38",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.9.2",
    "wait-on": "^7.2.0"
  }
}
